<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tasks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/tasks"
    tools:context="zhanel.kz.a2zhaskanba.TasksActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Сделайте селфи на колесе обозрения."
        android:id="@+id/textView"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:textSize="18sp"
        android:fontFamily="serif-monospace"
    />
<Button
    android:layout_width="80dp"
    android:layout_height="25dp"
    android:layout_marginLeft="225dp"
    android:layout_marginTop="60dp"
    android:background="@drawable/save"
    android:id="@+id/takeButton" />
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp" 
        android:background="@drawable/aje"
        android:id="@+id/button" 
        android:layout_marginTop="20dp"
        android:layout_marginLeft="-3dp"/>
    <Button
        android:id="@+id/ata"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ata"
        android:layout_marginTop="-70dp"
        android:layout_marginLeft="75dp"/>
    <Button
        android:id="@+id/ake"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ake"
        android:layout_marginTop="-70dp"
        android:layout_marginLeft="150dp"/>

    <Button
        android:id="@+id/apa"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ana"
        android:layout_marginTop="-70dp"
        android:layout_marginLeft="225dp"/>
    <Button
        android:id="@+id/kiz"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/kiz"
        android:layout_marginTop="-70dp"
        android:layout_marginLeft="295dp"/>
    <Button
        android:id="@+id/bala"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/bala"
        android:layout_marginTop="-70dp"
        android:layout_marginLeft="365dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="130dp"
       android:background="@android:color/transparent"
        android:id ="@+id/balaButton"
        android:text="Кто такой журттын баласы?"
        android:textColor="@android:color/white"
        android:fontFamily="serif-monospace"
        />
    <Button
        android:id = "@+id/worldButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/earth"/>
    <Button
        android:id="@+id/taskButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="-40dp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/favorites"/>
    <Button
        android:id="@+id/profileButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="-40dp"
        android:layout_marginLeft="300dp"
        android:background="@drawable/user"/>
</LinearLayout>